---
import jsonProducts from "./store.json"
import {Image}from "astro:assets"
const products = jsonProducts
---

<section>
  <div
    class="grid grid-cols-1 gap-6 lg:gap-y-24 md:grid-cols-2 lg:grid-cols-3 py-12 px-12"
  >
    {
      products.map((product) => (
        <figure class="relative ">
          <a href={`/store/${product.slug}`} target="_blank" aria-label="image" aria-hidden="true" class="absolute inset-0" />
          <Image
            loading="lazy"
            width="800"
            height="800"
            alt={product.title}
            src={product.image}
            class="w-full rounded-3xl shadow aspect-3/4 object-cover object-center"
          />
          <div class="mt-2 flex justify-between px-6">
            <div>
              <h3 class="text-base text-base-500">{product.title}</h3>
              <p class="mt-1 text-sm font-medium  text-base-900">
                {product.subtitle}
              </p>
            </div>
            <b class="text-base text-teal-600">{product.price}</b>
          </div>
        </figure>
      ))
    }
  </div>
</section>