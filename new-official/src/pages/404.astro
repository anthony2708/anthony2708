---
import Base from "@/layouts/Base.astro";
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import { getEntry, render } from "astro:content";
const entry = (await getEntry("pages", "404")) as CollectionEntry<"pages">;
const { Content } = await render(entry);
---

<Base title={entry.data.title}>
  <section class="section">
    <div class="container">
      <div class="flex h-[40vh] items-center justify-center">
        <div class="text-center">
          <img src="/images/404.png" alt="404 Not Found" class="w-1/3 mb-4" />
          <h2 class="mb-4" set:html={markdownify(entry.data.title)} />
          <Content />
          <a href='/' class="btn btn-primary text-white py-2 mt-3">Trở về trang chủ</a>
        </div>
      </div>
    </div>
  </section>
</Base>
